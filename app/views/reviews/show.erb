<% if flash[:message] %>
  <p style="color:green;"><%= flash[:message] %></p>
<% elsif flash[:error] %>
  <p style="color:red;"><%= flash[:error] %></p>
<% end %>

<p> Here is a particular review by <%= @review.user.username %>: <p>
<p><b>Book:</b> <%= @review.book.title %></p>
<p><b>Author:</b> <%= @review.book.author %></p>
<form action="/reviews/<%=@review.id%>/delete" method="POST">
  <p><b>Star Rating:</b> <%= @review.stars %></p>
  <p><b>Content:</b> <%= @review.content %></p>
  <% if @review.user == current_user %>
  <button type="submit" value="submit">Delete Review</button>
  <br>
  <% end %>
</form>
<footer>
  <br>
  <% if @review.user == current_user %>
    <p>Other options: </p>
    <ul>
    <li><a href="/reviews/<%=@review.id%>/edit">Edit this review</a></li>
    <li><a href="/">Back to main page</a></li>
    </ul>
  <% else %>
    <a href="/">Back to main page</a>
  <% end %>
</footer>
